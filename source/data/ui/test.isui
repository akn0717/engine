<isui xmlns:ui="https://www.iceshard.net/docs/engine/v1_alpha/isui/ui/"
    xmlns:ice="https://www.iceshard.net/docs/engine/v1_alpha/isui/iceshard/">

  <ui:resources>
    <ui:resource type="font" default="true" asset="calibri"/>
  </ui:resources>

  <ice:shards>
    <ice:shard name="button_click" action="action/ui/button:click" />
  </ice:shards>

  <ui:page position="600,100">
    <ui:container type="vertical">
      <ui:button size="*,auto" padding="6,6,12,6" margin="0,0,0,0" text="Start"></ui:button>
      <ui:button size="*,auto" padding="6,6,12,6" margin="0,10,0,0" text="Settings"></ui:button>
      <ui:button size="*,auto" padding="6,6,12,6" margin="0,10,0,0" text="Credits"></ui:button>
      <ui:button size="*,auto" padding="6,6,12,6" margin="0,10,0,0" text="Exit"></ui:button>
    </ui:container>
  </ui:page>

</isui>
