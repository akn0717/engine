<isui xmlns:ui="https://www.iceshard.net/docs/engine/v1_alpha/isui/ui/"
    xmlns:ice="https://www.iceshard.net/docs/engine/v1_alpha/isui/iceshard/">

  <ui:resources>
    <ui:resource type="font" name="default" size="15" font="calibri" />
    <ui:resource type="text" name="text_start" />
    <ui:resource type="text" name="text_settings" />
    <ui:resource type="text" name="text_credits" />
    <ui:resource type="text" name="text_exit" />
  </ui:resources>

  <ice:shards>
    <ice:shard name="game_exit" action="action/game/exit" />
  </ice:shards>

  <ui:page position="600,100">
    <ui:container type="vertical">
      <ui:button size="*,auto" padding="6" margin="0,0,0,0" text="{Resource text_start}" />
      <ui:button size="*,auto" padding="6" margin="0,10,0,0" text="{Resource text_settings}" />
      <ui:button size="*,auto" padding="6" margin="0,10,0,0" text="{Resource text_credits}" />
      <ui:button size="*,auto" padding="6" margin="0,10,0,0" text="{Resource text_exit}" on_click="{Shard game_exit}" />
    </ui:container>
  </ui:page>

</isui>
